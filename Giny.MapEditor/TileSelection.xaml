<Window x:Class="Giny.MapEditor.TileSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Giny.MapEditor"
        mc:Ignorable="d"
        Title="TileSelection" Height="683.466" Width="1403.136">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" Margin="287,10,18,21">
            <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="401" Margin="53,21,0,0" VerticalAlignment="Top" Width="684"/>
        </ScrollViewer>
        <Rectangle Name="selectedTile" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="160" Margin="50,36,0,0" Stroke="Black" VerticalAlignment="Top" Width="176"/>

        <Label Name="tilename" Content="Tilename: " HorizontalAlignment="Left" Margin="101,10,0,0" VerticalAlignment="Top"/>
        <ListBox SelectionChanged="FolderSelection_SelectionChanged" x:Name="folderSelection" HorizontalAlignment="Left" Height="393" Margin="10,238,0,0" VerticalAlignment="Top" Width="263"/>
        <TextBox x:Name="search" TextChanged="TextBox_TextChanged" HorizontalAlignment="Left" Height="23" Margin="10,210,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="263"/>

    </Grid>
</Window>
